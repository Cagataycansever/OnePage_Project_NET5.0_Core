@model CoreProject.Areas.Writer.Models.UserRegisterVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
   <title>Core 5.0 | Writer Sign Up</title>
   <link rel="stylesheet" href="~/skydash/vendors/feather/feather.css">
   <link rel="stylesheet" href="~/skydash/vendors/ti-icons/css/themify-icons.css">
   <link rel="stylesheet" href="~/skydash/vendors/css/vendor.bundle.base.css">
   <link rel="stylesheet" href="~/skydash/css/vertical-layout-light/style.css">
   <link rel="shortcut icon" href="~/skydash/images/favicon.png" />
</head>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <img src="~/skydash/images/logo.svg" alt="logo">
              </div>
              <h4>Bir hesabın yok mu ?</h4>
              <h6 class="font-weight-light">Birkaç adımda kayıt olabilirsin.</h6>

              <form class="pt-3" method="post">
                <div class="form-group">
                  <label>Adınız:</label>
                  <span asp-validation-for="Name" class="text-danger"></span>
                  <input type="text" asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                  <label>Soyadınız:</label>
                  <span asp-validation-for="SurName" class="text-danger"></span>
                  <input type="text" asp-for="SurName" class="form-control" />
                </div>
                <div class="form-group">
                  <label>Kullanıcı Adınız:</label>
                  <span asp-validation-for="UserName" class="text-danger"></span>
                  <input type="text" asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group">
                  <label>Şifreniz:</label>
                  <span asp-validation-for="Password" class="text-danger"></span>
                  <input type="password" asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                  <label>Şifre Tekrar:</label>
                  <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                  <input type="password" asp-for="ConfirmPassword" class="form-control" />
                </div>
                <div class="form-group">
                  <label>E-Posta:</label>
                  <span asp-validation-for="Mail" class="text-danger"></span>
                  <input type="email" asp-for="Mail" class="form-control" />
                </div>
                <div class="form-group">
                  <label>Görsel:</label>
                  <span asp-validation-for="ImageURL" class="text-danger"></span>
                  <input type="text" asp-for="ImageURL" class="form-control" />
                </div>
                <div class=text-danger asp-validation-summary="ModelOnly"> 

                </div>

                <div class="mt-3">
                    <button class="btn btn-outline-primay">Kayıt Ol</button>
                  @*<a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" asp-action="Index">Kayıt Ol</a>*@
                </div>                
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>