@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.FeatureID)
    <div class="col-md-16 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> <code>ÖNE ÇIKAN ALAN DÜZENLEME</code>  </p>
                <form class="forms-sample">
                    <div class="form-group row">
                        <label for="FeatureHeader" class="col-sm-3 col-form-label">Başlık</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x=>x.Header,new{ @class="form-control"})
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="FeatureName" class="col-sm-3 col-form-label">İsim</label>
                        <div class="col-sm-9">
                          @Html.TextBoxFor(x=>x.Name,new{ @class="form-control"})
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="FeatureTitle" class="col-sm-3 col-form-label">Ünvan</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x=>x.Title,new{ @class="form-control"})
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}

