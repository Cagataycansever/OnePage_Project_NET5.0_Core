@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@using (Html.BeginForm("AddSkill", "Skill", FormMethod.Post))
{
    <div class="col-md-16 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> <code>YETENEK EKLE</code>  </p>
                <form class="forms-sample">
                    <div class="form-group row">
                        <label for="SkillTitle" class="col-sm-3 col-form-label">Yetenek Adı</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="Title">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="SkillValue" class="col-sm-3 col-form-label">Değer</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="Value">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}