@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> <code>PROJELER</code>  </p>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort" data-sort="name">Proje</th>
                                <th scope="col" class="sort" data-sort="name">Ücret</th>
                                <th scope="col" class="sort" data-sort="name">Durum</th>
                                <th scope="col" class="sort" data-sort="name">Tamamlanma Oranı</th>
                                <th scope="col" class="sort" data-sort="name">Düzenle</th>
                                <th scope="col" class="sort" data-sort="name">Sil</th>
                            </tr>
                        </thead>
                        <tbody class="list">

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        <div class="media align-items-center">
                                            <a href="#" class="avatar rounded-circle mr-3">
                                                <img alt="Image placeholder" src="@item.Platform">
                                            </a>
                                            <div class="media-body">
                                                <span class="name mb-0 text-sm">@item.Name</span>
                                            </div>
                                        </div>
                                    </th>
                                    <td class="budget">
                                        @item.Price ₺
                                    </td>
                                    <td>
                                        <span class="badge badge-dot mr-4">
                                            <i class="bg-success"></i>
                                            <span class="status">Tamamlandı</span>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="completion mr-2">@item.Value%</span>
                                            <div>
                                                <div class="progress">
                                                    <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="media align-items-center">
                                            <div class="media-body">
                                                <span class="name mb-0 text-sm"><a href="/Portfolio/EditPortfolio/@item.PortfolioID" class="btn btn-outline-success">Düzenle</a></span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="media align-items-center">
                                            <div class="media-body">
                                                <span class="name mb-0 text-sm"><a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-outline-danger">Sil</a></span>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Portfolio/AddPortfolio" class="btn btn-outline-primary">Ekle</a>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>

